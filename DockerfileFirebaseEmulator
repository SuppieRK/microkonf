FROM node:14.2.0-alpine3.11

ENV FIREBASE_TOOLS_VERSION=8.3.0
RUN yarn global add firebase-tools@${FIREBASE_TOOLS_VERSION} && \
    yarn cache clean && \
    firebase -V && \
    mkdir $HOME/.cache

RUN apk --no-cache add openjdk8-jre bash curl openssl gettext
ENTRYPOINT firebase emulators:start --only firestore